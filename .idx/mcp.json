{
  "mcpServers": {
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "experimental:mcp",
        "--only",
        "auth,firestore"
      ]
    },
    "doc_server": {
      "command": "uv",
      "args": [
        "run",
        "--server-dir",
        "mcp_server",
        "python",
        "firebase_docs_mcp.py"
      ]
    }
  }
}